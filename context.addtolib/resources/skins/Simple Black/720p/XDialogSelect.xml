<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <defaultcontrol>200</defaultcontrol>
    <zorder>-1</zorder>
    <coordinates>
        <system>1</system>
        <posx>340</posx>
        <posy>100</posy>
    </coordinates>
    
    <controls>
    
        <control type="image" id="90">
            <description>Dim Background</description>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="10" time="700" delay="0" tween="line"/>
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="10" end="0" time="1000" delay="170" tween="line"/>
            </animation>
            <posx>-340</posx>
            <posy>-100</posy>
            <width>1280</width>
            <height>720</height>
            <backgroundcolor>0</backgroundcolor>
            <texture>dim.png</texture>
        </control>
    
      <control type="group">      
        
        <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="700" delay="0" tween="circle" easing="inout"/>
                <effect type="slide" start="-200,0" end="0,0" time="700" delay="0" tween="circle" easing="inout"/>
        </animation>  
        <!--animation type="WindowClose"-->
        <animation type="Conditional" condition="!Control.IsVisible(2)+Control.IsVisible(1)">
                <effect type="fade" start="100" end="0" time="700" delay="0" tween="line" easing="inout"/>
                <effect type="slide" start="0,0" end="-200,0" time="700" delay="0" tween="line" easing="inout"/>
        </animation>
        <animation type="Conditional" condition="!Control.IsVisible(1)">
                <effect type="fade" start="100" end="0" time="400" delay="0" tween="line" easing="inout"/>
                <effect type="slide" start="0,0" end="-200,0" time="400" delay="0" tween="line" easing="inout"/>
        </animation>
        
        <control type="label" id="1">
            <description>Animation flag</description>
            <visible>true</visible>
        </control>
        
        <control type="label" id="2">
            <description>Animation flag</description>
            <visible>true</visible>
        </control>
      
        <control type="image">
            <description>Dialog Background</description>
            <posx>-340</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>500</height>
            <texture>dim.png</texture>
        </control>
        
        <control type="image">
            <description>Home icon</description>
            <posx>15</posx>
            <posy>17</posy>
            <width>25</width>
            <height>25</height>
            <texture>icon_home.png</texture>
        </control>
        <control type="label" id="100">
            <description>Caption</description>
            <posx>45</posx>
            <posy>7</posy>
            <width>510</width>
            <height>45</height>
            <font>font13</font>
            <aligny>center</aligny>
            <align>center</align>
            <scroll>True</scroll>
            <shadowcolor>ff000000</shadowcolor>
            <wrapmultiline>false</wrapmultiline>
            <scrollspeed>50</scrollspeed>
        </control>
        <control type="group">
            
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="60" time="400" delay="300" tween="line" easing="inout"/>
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="60" end="0" time="200" delay="0" tween="line" easing="inout"/>
            </animation>
            
            <control type="label" id="150">
                <description>Page</description>
                <!--posx>20</posx-->
                <posx>45</posx>
                <posy>455</posy>
                <width>510</width>
                <height>50</height>
                <font>font10</font>
                <aligny>center</aligny>
                <align>center</align>
                <scroll>True</scroll>
                <scrollspeed>50</scrollspeed>
                <wrapmultiline>false</wrapmultiline>
                <textcolor>dimgrey</textcolor>
                <visible>True</visible>
                <label></label>
            </control>
        </control>
        <control type="list" id="200">
            <description>Select list</description>
            
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="700" delay="0" tween="circle" easing="inout"/>
            </animation>
            <!--animation type="WindowClose"-->
            <animation type="Conditional" condition="!Control.IsVisible(2)+Control.IsVisible(1)">
                <effect type="fade" start="100" end="0,0" time="400" delay="0" tween="line" easing="inout"/>
            </animation>
            <animation type="Conditional" condition="!Control.IsVisible(1)">
                <effect type="fade" start="100" end="0,0" time="400" delay="0" tween="line" easing="inout"/>
            </animation>
            
            <left>20</left>
            <top>60</top>
            <width>560</width>
            <height>400</height>
            <orientation>vertical</orientation>
            <focusposition>0</focusposition>
            <scrolltime tween="sine" easing="out">200</scrolltime>
            <itemlayout width="580" height="50">  
               
               <control type="image">
                    <description>icn</description>
                    <posx>10</posx>
                    <posy>15</posy>
                    <width>16</width>
                    <height>16</height>
                    <texture>icon_act.png</texture>
               </control>
               
	           <control type="label">
                    <left>35</left>
                    <top>0</top>
                    <width>560</width>
                    <height>45</height>
                    <font>font12</font>
                    <aligny>center</aligny>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            
            <focusedlayout height="50" width="580">
               <control type="group"> 
                   <control type="image">
                        <description>icn</description>
                        <posx>10</posx>
                        <posy>15</posy>
                        <width>16</width>
                        <height>16</height>
                        <texture>icon_act_f.png</texture>
                   </control> 
                   <control type="image">
                        <description>sel_bk</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>560</width>
                        <height>45</height>
                        <visible>Control.HasFocus(200)</visible>
                        <texture>ran.png</texture>
                   </control>
               </control>
               <control type="label">
                    <left>35</left>
                    <top>0</top>
                    <width>560</width>
                    <height>45</height>
                    <font>font12</font>
                    <aligny>center</aligny>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
      </control>  
    </controls>
</window>